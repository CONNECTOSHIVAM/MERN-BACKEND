<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-black">

    <div class="main w-full">

        <!-- Form Section -->
        <div class="form p-10 text-white">
            <form action="/create" method="POST">
                <input 
                    class="block px-5 w-full rounded-md outline-none py-2 bg-zinc-800" 
                    type="text" 
                    placeholder="Title goes here" 
                    name="title" 
                    required
                >

                <textarea 
                    class="block mt-2 px-5 w-full rounded-md outline-none py-2 resize-none bg-zinc-800" 
                    placeholder="Write your task details" 
                    name="details"
                    required
                ></textarea>

                <input 
                    class="mt-3 bg-yellow-600 px-5 py-2 rounded-md cursor-pointer" 
                    type="submit" 
                    value="Create a task"
                >     
            </form>
        </div>

        <!-- Tasks Section -->
        <div class="tasks flex gap-3 flex-wrap p-10">

            <% if (files && files.length > 0) { %>

                <% files.forEach(function(task){ %>
                    <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-2xl tracking-tight"><%= task %></h1>
                        <div class="flex w-full justify-between items-center  mt-3">
                            <a 
                            class="text-blue-500 inline-block " 
                            href="/file/<%= task %>"
                        >
                            Read more...
                        </a>
                        <a class="text-zinc-600" href="/edit/<%= task %>">edit</a>
                        </div>
                    </div>
                <% }) %>

            <% } else { %>

                <h3 class="text-zinc-500 text-lg">No tasks yet...</h3>

            <% } %>

        </div>

    </div>

</body>
</html>
